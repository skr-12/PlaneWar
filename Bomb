import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

public class Bomb {
	int x,y;
	private int width = 10;
	private int height = 10;
	private static final int X_ZD = 15;
	private static final int Y_ZD = 35;
	boolean live = true;
	public MainConsole mc;
	Rectangle rzd = new Rectangle(x,y,width,height);
	
	public Bomb(int x,int y,MainConsole mc) {
		this.x = x;
		this.y = y;
		this.mc = mc;
	}
	
	public void paint(Graphics g) {
		g.setColor(Color.YELLOW);
		g.fillOval(x, y, width, height);
		move();	
	}
	
	public void move() {
		y = y + Y_ZD;
		
		if(y<0 || y>500) {
			live = false;
			mc.zd.remove(this);
		}
	}
	
	public boolean lives() {
		return live;
	}
	
	public Rectangle getRectange() {
		return  rzd;
	}
	
	public boolean zhuangJi(Plane a) {
		if(this.rzd.intersects(a.rp) && this.lives() == false && a.lives() == false) {
			live = false;
			return true;
		}	
		return false;
	}
}
