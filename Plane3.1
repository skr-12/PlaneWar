import java.awt.Color;
import java.awt.Graphics;
import java.awt.event.KeyEvent;

public class Plane {
	private int x_location=150;
	private int y_location=450;
	private static final int x_weiyi=5;
	private static final int y_weiyi=5;
	enum FangXiang{up,down,left,right,stop};
	FangXiang fx = FangXiang.stop;
	
	public void paint(Graphics g) {
		g.setColor(Color.BLUE);	
		g.fillOval(x_location, y_location, 20,30 );
	}
	
	public void move() {
		if(fx == FangXiang.up) {
			y_location = y_location - y_weiyi;
		}
		else if(fx == FangXiang.down) {
			y_location = y_location + y_weiyi;
		}
		else if(fx == FangXiang.left) {
			x_location = x_location - x_weiyi;
		}
		else if(fx == FangXiang.right) {
			x_location = x_location + x_weiyi;
		}
	}

	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		int k = e.getKeyCode();
		if(k == KeyEvent.VK_UP) {
			y_location = y_location - y_weiyi;
		}
		else if(k == KeyEvent.VK_DOWN) {
			y_location = y_location + y_weiyi;
		}
		else if(k == KeyEvent.VK_LEFT) {
			x_location = x_location - x_weiyi;
		}
		else if(k == KeyEvent.VK_RIGHT) {
			x_location = x_location + x_weiyi;
		}
	}
	
}
