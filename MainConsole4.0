import java.awt.Frame;
import java.awt.Graphics;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.util.ArrayList;
import java.util.List;

public class MainConsole extends Frame {	
	Plane p = new Plane();
	List<PaoDan> pd = new ArrayList<PaoDan>();
	
	public MainConsole() {
		this.setTitle("飞机大战");
		this.setSize(300, 500);
		this.setLocation(200, 200);
		this.setVisible(true);
		this.addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent e) {
				setVisible(false);
				System.exit(0);
			}
		});
		
		this.addKeyListener(new Jianpan());
		Thread t = new Thread(new ThreadPlane());

		t.start();
		//setVisible(true);
	}
	
	public void paint(Graphics g) {
		p.paint(g);
//		pd.paintPD(g);
		for(int i=0;i<pd.size();i++) {
			PaoDan m = pd.get(i);
			m.paintPD(g);
		}
	}
	
	class ThreadPlane implements Runnable {
		public void run() {
			while(true) {
				repaint();
				try {  
                    Thread.sleep(100);  
                } catch (InterruptedException e) {  
                    e.printStackTrace();
                }
			}			
		}
	}
	
	class Jianpan extends KeyAdapter {
		public void keyPressed(KeyEvent e) {
			p.keyPressed(e);
		}
		
		public void keyReleased(KeyEvent e) {
			p.keyReleased(e);
		}
	}
	
	public static void main(String[] args) {
		MainConsole mc = new MainConsole();
	}

}
